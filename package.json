{
   "name": "talkarr",
   "version": "0.1.0",
   "private": true,
   "scripts": {
      "dev:tsnd": "ts-node-dev --respawn --transpile-only --no-notify --project backend/tsconfig.json -r tsconfig-paths/register --watch backend --ignore-watch .next --ignore-watch src backend/index.ts",
      "dev:nodemon": "nodemon --exec ts-node --project backend/tsconfig.json -r tsconfig-paths/register backend/index.ts",
      "dev": "npm run dev:nodemon",
      "build:next": "next build",
      "build": "npm run build:next",
      "start": "NODE_ENV=production ts-node --project backend/tsconfig.json -r tsconfig-paths/register backend/index.ts",
      "start:prod": "npm run migration:deploy && npm run start",
      "lint": "next lint",
      "lint:fix": "next lint --fix",
      "typecheck:web": "tsc --noEmit",
      "typecheck:backend": "tsc --noEmit --project backend/tsconfig.json",
      "typecheck": "npm run typecheck:web && npm run typecheck:backend",
      "migration:init": "prisma migrate dev --name init",
      "migration:deploy": "node_modules/.bin/dotenv -e .env prisma migrate deploy",
      "dev:db": "docker compose -f docker-compose.dev.yml up -d",
      "dev:redis": "docker compose -f docker-compose.dev.yml up -d redis",
      "db:reset": "docker compose -f docker-compose.dev.yml down -v && docker compose -f docker-compose.dev.yml up -d",
      "redis:reset": "docker compose -f docker-compose.dev.yml down -v redis && docker compose -f docker-compose.dev.yml up -d redis",
      "typeorm": "typeorm-ts-node-commonjs",
      "generate:openapi-backend": "openapi-typescript ./backend.json --output backend/generated/schema.ts",
      "generate": "npm run generate:openapi-backend",
      "test:backend": "bash -c 'pushd backend && jest && popd'",
      "test:e2e": "playwright test",
      "test": "npm run test:backend"
   },
   "dependencies": {
      "@emotion/cache": "^11.14.0",
      "@emotion/react": "^11.14.0",
      "@emotion/styled": "^11.14.0",
      "@mui/icons-material": "^6.3.0",
      "@mui/material": "^6.3.0",
      "@mui/material-nextjs": "^6.3.0",
      "@prisma/client": "6.1.0",
      "@uidotdev/usehooks": "^2.4.1",
      "bull": "^4.16.5",
      "cookie-parser": "^1.4.7",
      "deepmerge": "^4.3.1",
      "express": "^4.21.2",
      "express-winston": "^4.2.0",
      "jest": "^29.7.0",
      "markdown-to-jsx": "^7.7.2",
      "memory-cache": "^0.2.0",
      "mime-types": "^2.1.35",
      "moment": "^2.30.1",
      "next": "15.1.3",
      "notistack": "^3.0.1",
      "openapi-fetch": "^0.13.3",
      "pg": "^8.4.0",
      "pretty-bytes": "^6.1.1",
      "prisma": "^6.1.0",
      "react": "^19.0.0",
      "react-dom": "^19.0.0",
      "react-markdown": "^9.0.1",
      "reflect-metadata": "^0.1.13",
      "swagger-ui-express": "^5.0.1",
      "ts-node": "^10.9.2",
      "type-fest": "^4.31.0",
      "winston": "^3.17.0",
      "winston-daily-rotate-file": "^5.0.0",
      "youtube-dl-exec": "^3.0.12",
      "zustand": "^5.0.2",
      "typescript": "^5",
      "tsconfig-paths": "^4.2.0",
      "dotenv": "^16.4.7",
      "dotenv-cli": "^8.0.0"
   },
   "devDependencies": {
      "@eslint/compat": "^1.2.4",
      "@eslint/eslintrc": "^3",
      "@eslint/js": "^9.17.0",
      "@microsoft/eslint-formatter-sarif": "^3.1.0",
      "@playwright/test": "^1.49.1",
      "@types/bull": "^4.10.4",
      "@types/cookie-parser": "^1.4.8",
      "@types/express": "^5.0.0",
      "@types/jest": "^29.5.14",
      "@types/memory-cache": "^0.2.6",
      "@types/mime-types": "^2.1.4",
      "@types/node": "^22",
      "@types/react": "^19",
      "@types/react-dom": "^19",
      "@types/swagger-ui": "^3.52.4",
      "@types/swagger-ui-express": "^4.1.7",
      "@vercel/nft": "^0.29.0",
      "eslint": "^9",
      "eslint-config-airbnb-base": "^15.0.0",
      "eslint-config-airbnb-typescript": "^18.0.0",
      "eslint-config-next": "15.1.4",
      "eslint-config-prettier": "^9.1.0",
      "eslint-plugin-deprecation": "^3.0.0",
      "eslint-plugin-import": "^2.31.0",
      "eslint-plugin-mui-path-imports": "^0.0.15",
      "eslint-plugin-no-relative-import-paths": "^1.6.1",
      "eslint-plugin-prettier": "^5.2.1",
      "eslint-plugin-simple-import-sort": "^12.1.1",
      "nodemon": "^3.1.9",
      "openapi-typescript": "^7.5.2",
      "openapi-typescript-helpers": "^0.0.15",
      "prettier": "^3.4.2",
      "ts-jest": "^29.2.5",
      "ts-node-dev": "^2.0.0",
      "typescript-eslint": "^8.19.1"
   },
   "engines": {
      "node": ">=22"
   },
   "nodemonConfig": {
      "watch": [
         "./backend"
      ],
      "ignore": [
         ".next",
         "src"
      ],
      "ext": "ts,json"
   }
}
